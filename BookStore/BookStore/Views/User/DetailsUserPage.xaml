<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookStore.Views.User.DetailsUserPage"
             Title="New user"
             BackgroundColor="#F8F4EF">
    <ContentPage.Content>
        <Grid HorizontalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="335" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Frame HorizontalOptions="Center" BackgroundColor="White">
                <StackLayout >
                    <Label Text="Name" FontSize="13" TextColor="Black"/>
                    <Label
                            Text="{Binding Name}"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="White">
                    </Label>
                    <Label Text="Surname" FontSize="13" TextColor="Black"/>
                    <Label 
                            Text="{Binding Surname}"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="White">
                    </Label>
                    <Label Text="Role" FontSize="13" TextColor="Black"/>
                    <Label 
                            Text="{Binding Role}"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="White">
                    </Label>
                    <Label Text="Address" FontSize="13" TextColor="Black"/>
                    <Label 
                            Text="{Binding Address}"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="White">
                    </Label>
                    <Label Text="Phone number" FontSize="13" TextColor="Black"/>
                    <Label 
                            Text="{Binding PhoneNumber}"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="White">
                    </Label>
                    <Label Text="E-mail" FontSize="13" TextColor="Black"/>
                    <Label 
                            Text="{Binding Email}"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="White">
                    </Label>
                    <Label Text="Nickname" FontSize="13" TextColor="Black"/>
                    <Label 
                            Text="{Binding Nickname}"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="White">
                    </Label>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="#7B82D8" TextColor="White" CornerRadius="18" WidthRequest="78" HeightRequest="38" Margin="10" HorizontalOptions="Start"/>
                        <Button Text="Delete" Command="{Binding DeleteCommand}" BackgroundColor="#F87265" TextColor="White" CornerRadius="18" WidthRequest="98" HeightRequest="38" Margin="10" HorizontalOptions="End"/>
                    </Grid>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>