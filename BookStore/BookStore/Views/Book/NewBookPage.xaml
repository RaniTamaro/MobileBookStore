<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BookStore.Views.Book.NewBookPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="New Book"
    BackgroundColor="#F8F4EF">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Frame BackgroundColor="White" HorizontalOptions="Center">
                <StackLayout>
                    <Label
                        FontSize="13"
                        Text="Title"
                        TextColor="Black" />
                    <Entry
                        BackgroundColor="White"
                        HorizontalOptions="FillAndExpand"
                        Text="{Binding Title, Mode=TwoWay}"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand" />
                    <Picker
                        Title="Author"
                        BackgroundColor="#7B82D8"
                        SelectedItem="{Binding SelectedAuthor}"
                        TextColor="White"
                        TitleColor="Black">
                        <Picker.ItemsSource>
                            <Binding Path="Authors" />
                        </Picker.ItemsSource>
                        <Picker.ItemDisplayBinding>
                            <Binding Path="Nickname" />
                        </Picker.ItemDisplayBinding>
                    </Picker>
                    <Label
                        FontSize="13"
                        Text="Publishing House"
                        TextColor="Black" />
                    <Entry
                        BackgroundColor="White"
                        HorizontalOptions="FillAndExpand"
                        Text="{Binding PublishingHouse, Mode=TwoWay}"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand" />
                    <Picker
                        Title="Category"
                        BackgroundColor="#7B82D8"
                        SelectedItem="{Binding SelectedCategory}"
                        TextColor="White"
                        TitleColor="Black">
                        <Picker.ItemsSource>
                            <Binding Path="Categories" />
                        </Picker.ItemsSource>
                        <Picker.ItemDisplayBinding>
                            <Binding Path="Name" />
                        </Picker.ItemDisplayBinding>
                    </Picker>
                    <Picker
                        Title="Genre"
                        BackgroundColor="#7B82D8"
                        SelectedItem="{Binding SelectedGenres}"
                        TextColor="White"
                        TitleColor="Black">
                        <Picker.ItemsSource>
                            <Binding Path="Genres" />
                        </Picker.ItemsSource>
                        <Picker.ItemDisplayBinding>
                            <Binding Path="Name" />
                        </Picker.ItemDisplayBinding>
                    </Picker>
                    <Label
                        FontSize="13"
                        Text="Price"
                        TextColor="Black" />
                    <Entry
                        BackgroundColor="White"
                        HorizontalOptions="FillAndExpand"
                        Text="{Binding Price, Mode=TwoWay}"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        FontSize="13"
                        Text="Description"
                        TextColor="Black" />
                    <Editor
                        BackgroundColor="White"
                        HeightRequest="100"
                        HorizontalOptions="FillAndExpand"
                        Text="{Binding Description, Mode=TwoWay}"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Margin="10,10,0,0"
                            BackgroundColor="#7B82D8"
                            Command="{Binding CancelCommand}"
                            CornerRadius="18"
                            HeightRequest="38"
                            Text="Cancel"
                            TextColor="White"
                            WidthRequest="68" />
                        <Button
                            Grid.Column="2"
                            Margin="10,10,0,0"
                            BackgroundColor="#7BD8C2"
                            Command="{Binding SaveCommand}"
                            CornerRadius="18"
                            HeightRequest="38"
                            Text="Add"
                            TextColor="White"
                            WidthRequest="68" />
                    </Grid>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>